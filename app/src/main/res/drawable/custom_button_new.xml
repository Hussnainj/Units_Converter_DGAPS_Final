<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <gradient android:startColor="#FF8AD6FF" android:centerColor="#FF39A5FE" android:endColor="#FF048CFC" android:angle="270"/>
            <corners android:radius="10dp"> </corners>
            <stroke android:width="2dp" android:color="#1b98ff"></stroke>
            <padding android:top="5dp" android:right="15dp" android:bottom="5dp" android:left="15dp"/>


        </shape>


    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#FF8AD6FF" android:centerColor="#FF39A5FE" android:endColor="#FF048CFC" android:angle="270"/>
            <corners android:radius="10dp"> </corners>
            <stroke android:width="3dp" android:color="#FF8BFDF7"></stroke>
            <padding android:top="5dp" android:right="15dp" android:bottom="5dp" android:left="15dp"/>


        </shape>


    </item>
</selector>